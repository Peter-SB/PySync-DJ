jobs:
  pyinstaller-build:
    runs-on: windows-latest
    steps:
      - name: Install Requirements.txt
        run: 'pip install nicegui pywebview'
      - name: Create Executable
        uses: sayyid5416/pyinstaller@v1
        with:
          python_ver: '3.9'
          spec: 'PySyncDj.spec'
          requirements: 'requirements.txt'
          upload_exe_with_name: 'PySync DJ'